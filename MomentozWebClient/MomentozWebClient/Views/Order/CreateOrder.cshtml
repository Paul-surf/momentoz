@model MomentozWebClient.Models.Order

@{
    ViewData["Title"] = "CreateOrder";
}

<h1>Ordre</h1>

<h4>Ordre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <div style="background-color:white;padding:5px;">
                    @Model.TotalPrice DKK
                </div>
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <div style="background-color:white;padding:5px;">
                    @Model.PurchaseDate
                </div>
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <div style="background-color:white;padding:5px;">
                   @User.Identity.Name
                </div>  
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<form method="Post" asp-controller="Order" asp-action="CreateOrderReceipt" >
                <div class="form-group">

        @Html.HiddenFor(model => model.FlightID)
        @Html.HiddenFor(model => model.TotalPrice)
        @Html.HiddenFor(model => model.PurchaseDate)

                    <input type="submit" value="Køb" class="btn btn-primary" />
                </div>
            </form>

<div>
    <a asp-action="Index">Tilbage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
