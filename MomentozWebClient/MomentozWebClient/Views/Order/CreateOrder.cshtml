@model MomentozWebClient.Models.Order
@using MomentozWebClient.Controllers;
@inject FlightController FlightController

@{
    ViewData["Title"] = "Opret Ordre";
}

<h1>Ordre</h1>

<h4>Ordre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label">Samlet pris</label>
                <div style="background-color:white;padding:5px;">
                    @Model.TotalPrice DKK
                </div>
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label">Dato for købet</label>
                <div style="background-color:white;padding:5px;">
                    @Model.PurchaseDate
                </div>
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <div style="background-color:white;padding:5px;">
                    @User.Identity.Name
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Destination</label>
                <div style="background-color:white;padding:5px;">
                    @if (Model.FlightID != null)
                    {
                        int id = @Model.FlightID;
                        Flight f = await FlightController.getFlightById(id);
                        if (@f != null)
                        {
                            @f.DestinationAddress
                        }  
                    }
                    else
                    {
                        <span>Destination vises på næste side</span>
                    }
                </div>
            </div>
        </form>
    </div>
</div>
<form method="Post" asp-controller="Order" asp-action="CreateOrderReceipt" >
    <div class="form-group">
        @Html.HiddenFor(model => model.TotalPrice)
        @Html.HiddenFor(model => model.PurchaseDate)
        @Html.HiddenFor(model => model.FlightID)
        <input type="submit" value="Køb" class="btn btn-primary" style="margin-top:10px;"/>
    </div>
</form>

<div>
    <a asp-controller="Flight" asp-action="Flights">Tilbage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
