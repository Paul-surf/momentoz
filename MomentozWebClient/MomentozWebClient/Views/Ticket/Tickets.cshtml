@model MomentozWebClient.Models.Ticket

@{
    ViewData["Title"] = "Tickets";
}

<h1>Tickets</h1>
@if (Model == null)
{
    <h4> No order found.</h4>
} else
{
<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Tickets">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketNumber" class="control-label"></label>
                <input asp-for="TicketNumber" class="form-control" />
                <span asp-validation-for="TicketNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaggageID" class="control-label"></label>
                <input asp-for="BaggageID" class="form-control" />
                <span asp-validation-for="BaggageID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightID" class="control-label"></label>
                <input asp-for="FlightID" class="form-control" />
                <span asp-validation-for="FlightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<a asp-action="Index">Gå tilbage (Til Rejser)</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
